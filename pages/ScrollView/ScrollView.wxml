<import src="../../wxss/Template/Template.wxml"/>
<view class="container">
<template is="free-doc-title" data="{{doc_title:'Scroll-view 自定义可滚动的视图容器'}}"/>

<view class="free-panel-title">horizontal scroll</view>
<view class="free-panel" style="margin-bottom:150rpx;">
  <view class="free-horizontalScrolls">
